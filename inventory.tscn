[sub_resource type="GDScript" id="GDScript_0lctg"]
script/source = "extends Control
@onready var main = get_node(\"/root/Main\")

var slot_images = [$GridContainer/PanelContainer1/TextureRect,$GridContainer/PanelContainer2/TextureRect,$GridContainer/PanelContainer3/TextureRect,$GridContainer/PanelContainer4/TextureRect]
var slots = [null,null,null,null]
var is_visible: bool = false
func _ready() -> void:
	#slots = get_parent().get_tool_bar()
	#hide()
	show()
	
func _process(_delta: float) -> void:
	slots = get_parent().get_tool_bar()
	#update_inventory()
	if Input.is_action_just_pressed(\"inventory\"):
		is_visible = !is_visible
		if !is_visible:
			hide()
		else:
			show()
func update_inventory():
	for i in range(len(slots)):
		if slots[i] != null:
			slot_images[i].texture = slots[i].image_texture

func drop_item(index):
	if slots[index]:
		slots[index] = null
		slot_images[index].texture = null
		get_parent().tool_bar[index] = null
		get_parent().current_weapon = null
		update_inventory()


"

